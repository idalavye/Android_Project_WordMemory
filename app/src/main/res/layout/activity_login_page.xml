<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F7EF"
    android:padding="16dp"
    tools:context=".ui.activities.LoginPageActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="248dp"
        android:layout_height="189dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/word_memory_icon" />

    <TextView
        android:id="@+id/wm_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="WORD MEMORY"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Kelime Öğrenmek Artık Daha Kolay"
        android:textColor="#909497"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wm_textView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/connect_with_google"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Google ile Giriş Yap"
        app:icon="@drawable/google_icon"
        app:iconSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_with_facebook"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:layout_marginRight="8dp"
            android:height="60dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Facebook ile Giriş Yap"
            app:icon="@drawable/facebook_icon"
            android:textSize="13sp"
            app:iconSize="24dp"
            app:iconTintMode="multiply" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_with_email"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:layout_marginLeft="8dp"
            android:height="60dp"
            android:backgroundTint="#E9F7EF"
            android:text="Email İle Giriş Yap"
            android:textColor="@android:color/holo_blue_dark"
            app:icon="@drawable/mail_icon"
            app:iconSize="24dp"
            android:textSize="13sp"
            app:iconTintMode="multiply" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>